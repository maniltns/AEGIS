                        "index": 0
                    }
                ]
            ]
        },
        "üìù SCRIBE - Log Approved": {
            "main": [
                [
                    {
                        "node": "Route by Method",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Route by Method": {
            "main": [
                [
                    {
                        "node": "Execute ARS Portal",
                        "type": "main",
                        "index": 0
                    }
                ],
                [
                    {
                        "node": "Execute SSM Command",
                        "type": "main",
                        "index": 0
                    }
                ],
                [
                    {
                        "node": "Execute Opera Change",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Execute ARS Portal": {
            "main": [
                [
                    {
                        "node": "üìù SCRIBE - Log Execution",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Execute SSM Command": {
            "main": [
                [
                    {
                        "node": "üìù SCRIBE - Log Execution",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "Execute Opera Change": {
            "main": [
                [
                    {
                        "node": "üìù SCRIBE - Log Execution",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "üìù SCRIBE - Log Execution": {
            "main": [
                [
                    {
                        "node": "Respond",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "üìù SCRIBE - Log Rejected": {
            "main": [
                [
                    {
                        "node": "Respond",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    },
    "settings": {
        "executionOrder": "v1"
    },
    "tags": [
        "AEGIS",
        "JANITOR",
        "Approval Handler",
        "Human-in-the-Loop"
    ]
}