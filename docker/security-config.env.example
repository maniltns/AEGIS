# AEGIS Security Configuration
# DO NOT COMMIT THIS FILE WITH REAL SECRETS
# Use environment variables or secrets manager references

# ===========================================
# REDIS SECURITY
# ===========================================
REDIS_PASSWORD=your-secure-redis-password-here

# ===========================================
# SERVICENOW API
# ===========================================
SNOW_INSTANCE_URL=https://myaccortrain.service-now.com
SNOW_API_USER=aegis_integration
SNOW_API_PASSWORD=your-snow-api-password-here

# ===========================================
# AZURE AD (Kill Switch Authorization)
# ===========================================
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Authorized AD Groups for Kill Switch
KILLSWITCH_AUTHORIZED_GROUPS=AEGIS-Kill-Switch-Leads,IT-Team-Leads,IT-Managers,Security-Admins

# ===========================================
# MS TEAMS INTEGRATION
# ===========================================
TEAMS_WEBHOOK_URL=https://accor.webhook.office.com/webhookb2/...
TEAMS_KILLSWITCH_CHANNEL=aegis-governance

# ===========================================
# LLM / AI SERVICES
# ===========================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL_PRIMARY=gpt-4o
OPENAI_MODEL_FALLBACK=gpt-4o-mini

# ===========================================
# AWS SERVICES (for SSM execution)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# ===========================================
# PII SCRUBBER SETTINGS
# ===========================================
PII_REDACTION_ENABLED=true
PII_LOG_DETECTIONS=true
PII_PATTERNS_EXTENDED=true

# ===========================================
# GDPR COMPLIANCE
# ===========================================
GDPR_DATA_RETENTION_DAYS=90
GDPR_AUDIT_RETENTION_YEARS=7
GDPR_PII_ANONYMIZATION=true

# ===========================================
# GOVERNANCE DEFAULTS
# ===========================================
GOV_KILLSWITCH_DEFAULT=true
GOV_MODE_DEFAULT=assist
GOV_REQUIRE_2FA=true
