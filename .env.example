# AEGIS Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AWS BEDROCK CONFIGURATION (LLM + Embeddings)
# =============================================================================
# Bearer token for Bedrock API authentication
AWS_BEARER_TOKEN_BEDROCK=your-aws-bearer-token

# Claude Sonnet model ID for triage
BEDROCK_CLAUDE_SONNET_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# Titan embedding model for RAG
AWS_TITAN_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0

# AWS Region
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# SERVICENOW CONFIGURATION
# =============================================================================
SERVICENOW_INSTANCE=accordev.service-now.com
SERVICENOW_USER=aegis_integration
SERVICENOW_PASSWORD=your-snow-password

# =============================================================================
# MICROSOFT TEAMS CONFIGURATION
# =============================================================================
TEAMS_WEBHOOK_URL=https://accor.webhook.office.com/webhookb2/xxx

# Optional: MS Graph API for advanced Teams features
TEAMS_GRAPH_CLIENT_ID=
TEAMS_GRAPH_CLIENT_SECRET=
TEAMS_GRAPH_TENANT_ID=

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# RAG SERVICE CONFIGURATION
# =============================================================================
RAG_SERVICE_URL=http://rag-service:8100

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8200

# =============================================================================
# ADMIN PORTAL CONFIGURATION
# =============================================================================
# Azure AD for SSO (optional)
AZURE_AD_CLIENT_ID=
AZURE_AD_TENANT_ID=

# =============================================================================
# GOVERNANCE DEFAULTS
# =============================================================================
# Confidence thresholds (%)
THRESHOLD_AUTO_ASSIGN=85
THRESHOLD_AUTO_CATEGORIZE=80
THRESHOLD_AUTO_REMEDIATE=95

# Operating mode: auto | assist | monitor
DEFAULT_MODE=assist
